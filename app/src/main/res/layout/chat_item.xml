<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Bubble untuk Pesan Masuk -->
    <LinearLayout
        android:id="@+id/incomingMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/incoming_bubble"
        android:padding="12dp"
        android:layout_gravity="start"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvIncomingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an incoming message"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Bubble untuk Pesan Keluar -->
    <LinearLayout
        android:id="@+id/outgoingMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outgoing_bubble"
        android:padding="12dp"
        android:visibility="gone"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/tvOutgoingMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is an outgoing message"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
