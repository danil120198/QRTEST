<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Text LOGIN -->
    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="30dp"
        android:text="Info Tambahan"
        android:textColor="@color/biru"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Illustration Image -->
    <ImageView
        android:id="@+id/imgIllustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_marginBottom="32dp"
        android:src="@drawable/nurse2" />


    <!-- Username Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/namaInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:hint="Komentar"
        app:endIconMode="clear_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etnama"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="text"
            android:drawablePadding="16dp"
            android:gravity="top"
            android:textColor="@color/biru"
            android:textColorHint="#808080" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tambahkan TextView untuk label -->
    <TextView
        android:id="@+id/tvIncidentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Insiden"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <!-- Spinner untuk menampilkan data -->
    <Spinner
        android:id="@+id/spinnerIncident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvIncidentTitle"
        android:padding="12dp" />

    <!-- Login Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/biru"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

</LinearLayout>
